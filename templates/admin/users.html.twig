{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <div class="container">

        <div class="inline-flex pt-2">
            <h1>Users:</h1>
            <a href="{{ path('app_new_user') }}" class="btn-primary">Add New User</a>
        </div>
        <table >
            <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
            </tr>
            </thead>
            <tbody class="bg-white dark:bg-slate-800">
            {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
            <tr>
                {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('app_admin') }}">Back</a>

    </div>
{% endblock %}
